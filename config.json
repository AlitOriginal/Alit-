{
  "app": {
    "name": "AI Chat Assistant",
    "version": "1.0.0",
    "description": "Полнофункциональное приложение с AI чатом и мультиплеер функциями"
  },
  "server": {
    "host": "localhost",
    "port": 5000,
    "debug": true,
    "secret_key": "your-secret-key-change-this-in-production"
  },
  "ai": {
    "model": "gpt-3.5-turbo",
    "max_tokens": 2048,
    "temperature": 0.7,
    "timeout": 30
  },
  "frontend": {
    "theme": "dark",
    "primary_color": "#10a37f",
    "animation_speed": "0.3s"
  },
  "data": {
    "storage_type": "json",
    "data_dir": "./data",
    "auto_backup": true,
    "backup_interval": 3600
  },
  "features": {
    "authentication": true,
    "global_chat": true,
    "user_profiles": true,
    "message_history": true,
    "typing_indicator": true
  }
}
